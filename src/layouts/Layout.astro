---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta
			name="description"
			content="Empresa de remodelación y construcción en Santiago de Chile. Expertos en proyectos de renovación y obras nuevas."
		/>
		<meta
			name="keywords"
			content="remodelación, construcción, Santiago de Chile, renovación, obras nuevas"
		/>
		<meta name="author" content="Lujgher" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="./src/assets/img/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<meta
			property="og:title"
			content="Remodelación y Construcción en Santiago de Chile | Nombre de la Empresa"
		/>
		<meta
			property="og:description"
			content="Especialistas en proyectos de remodelación y construcción en Santiago de Chile."
		/>
		<meta property="og:image" content="url_de_la_imagen.png" />
		<!-- Reemplaza con la URL de la imagen para redes sociales -->
		<meta property="og:url" content="URL_de_tu_sitio_web" />
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		background-size: 224px;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
